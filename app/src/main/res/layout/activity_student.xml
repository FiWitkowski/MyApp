<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LayoutHandle.StudentActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Subjects of your child"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinnerSubjectStudentActivity"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Grades "
            android:textSize="18sp" />

        <ListView
            android:id="@+id/lv_GradeListStudentActivity"
            android:layout_width="match_parent"
            android:layout_height="309dp"
            android:visibility="visible"
            tools:visibility="visible" />

        <Button
            android:id="@+id/bt_CheckGradesStudentActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check grades"
            android:visibility="visible" />

        <Button
            android:id="@+id/bt_ExitStudentActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exit" />

    </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>